<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#2C3E50"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.vaiotech.schoolmate.TimeTableActivity">

   <LinearLayout
       android:id="@+id/linerTTHeader"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_weight="0.5"
           android:layout_height="wrap_content"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:text="Day"
           android:textColor="#ffffffff"
           android:id="@+id/textViewTTDay"
            />
       <TextView
           android:layout_width="wrap_content"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:text="Periods"
           android:textColor="#ffffffff"
           android:id="@+id/textViewTTPeriods"
            />
   </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/linerTTHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Day"
            android:textColor="#ffffffff"
            android:id="@+id/textViewTTDayVal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Periods"
            android:textColor="#ffffffff"
            android:id="@+id/textViewTTPeriodsValue"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Periods"
            android:textColor="#ffffffff"
            android:id="@+id/textViewTTPeriodsValue1"
            />
    </LinearLayout>
</RelativeLayout>
