<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.vaiotech.schoolmate.LoginDetailsActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:id="@+id/linearStudentName"
        android:layout_height="wrap_content">

        <TextView
            android:text="Student Name:"
            android:layout_width="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/textViewStudentName"
            android:textSize="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:id="@+id/textViewStudentNameValue"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView2"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:id="@+id/linearStudentRollNo"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearStudentName"
        android:layout_height="wrap_content">

        <TextView
            android:text="Student Roll No:"
            android:layout_width="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/textViewStudentRollNo"
            android:textSize="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:id="@+id/textViewStudentRollNoValue"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textViewStudentRollNo"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:id="@+id/linearStudentClass"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearStudentRollNo"
        android:layout_height="wrap_content">

        <TextView
            android:text="Student Class:"
            android:layout_width="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/textViewStudentClass"
            android:textSize="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:id="@+id/textViewStudentClassValue"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textViewStudentClass"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>
