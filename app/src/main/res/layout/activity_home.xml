<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity"
    >


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="To Know the details of the school/candidate please select from the followings to proceed"
        android:id="@+id/textViewHeader"
        android:textSize="18dp"
        android:layout_marginTop="30dp"
        />

    <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stateSpinner"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"

        android:textAlignment="center" />

    <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/schoolSpinner"
            android:layout_below="@+id/stateSpinner"
         />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:id="@+id/proceedButton"
        android:layout_margin="20dp"
        android:layout_below="@+id/schoolSpinner"
        android:onClick="next"
        android:textColor="#ffffffff"
        android:background="#ff830101" />


</RelativeLayout>
