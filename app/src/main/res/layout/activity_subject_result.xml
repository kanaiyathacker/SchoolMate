<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.vaiotech.schoolmate.SubjectResultActivity">

    <RelativeLayout
        android:id="@+id/relativeStudentSection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name:"
            android:id="@+id/textViewStudentName"
            />
        <TextView
            android:layout_toRightOf="@+id/textViewStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/textViewStudentNameValue"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/relativeStudentSection"
        android:id="@+id/relativeSec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:gravity="left"
            android:layout_weight="1"
            android:id="@+id/textViewClassName"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/textViewSection"
            android:layout_weight="1"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/textViewStudentRollNoValue"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/relativeTermHeader"
        android:layout_below="@+id/relativeSec"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Scoreqqqqqqqqqq"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center"
            android:id="@+id/textViewTermHeader"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeThird"
        android:layout_below="@+id/relativeTermHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data View"
            android:id="@+id/radioButtonDV" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graph View"
            android:id="@+id/radioButtonGV" />
    </RadioGroup>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeDV"
        android:layout_below="@+id/relativeThird"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_margin="5dp"
            android:id="@+id/linearYS"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Your Score"
                android:id="@+id/textViewYSLable"
            />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":80/100"
                android:id="@+id/textViewYSVal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_below="@+id/linearYS"
            android:id="@+id/linearHS"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Your Score"
                android:id="@+id/textViewHSLable"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":80/100"
                android:id="@+id/textViewHSVal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_below="@+id/linearHS"
            android:id="@+id/linearCA"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Your Score"
                android:id="@+id/textViewCALable"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":80/100"
                android:id="@+id/textViewCAVal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_below="@+id/linearCA"
            android:id="@+id/linearLS"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Your Score"
                android:id="@+id/textViewLSLable"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="80/100"
                android:id="@+id/textViewLSVal"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeGV"
        android:layout_below="@+id/relativeThird"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        >
    </RelativeLayout>
